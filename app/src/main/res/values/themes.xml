<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KotlinBase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Ignore system night mode. -->
        <item name="android:forceDarkAllowed" tools:targetApi="r">false</item>
    </style>

    <style name="LightTheme" parent="Theme.KotlinBase">
        <item name="colorBackground">@color/colorWhite</item>
        <item name="colorTextPrimary">@color/colorTextPrimary</item>
        <item name="colorTextSecondary">@color/colorTextSecondary</item>
        <item name="colorButton">@color/colorPrimary</item>
    </style>

    <style name="DarkTheme" parent="Theme.KotlinBase">
        <item name="colorBackground">@color/colorBackgroundDarkMode</item>
        <item name="colorTextPrimary">@color/colorTextPrimaryDark</item>
        <item name="colorTextSecondary">@color/colorTextSecondaryDark</item>
        <item name="colorButton">@color/colorPrimary</item>
    </style>
</resources>